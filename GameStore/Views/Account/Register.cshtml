@model GameStore.Models.RegisterModel

@{
    ViewBag.Title = "Registretion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form">
    <h4>Регистрация</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="fields_block">
        <label>Имя:</label>
        <div class="field">
            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="fields_block">
        <label>Пароль:</label>
        <div class="field">
            <input type="password" class="inputPas" name="Password">
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="fields_block">
        <label>Повторите пароль:</label>
        <div class="field">
            <input type="password" class="inputPas" name="RepeatPassword">
            @Html.ValidationMessageFor(model => model.RepeatPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="fields_block">
        <div class="field">
            <button type="submit">Зарегистрироваться </button>
        </div>
    </div>
</div>
}

