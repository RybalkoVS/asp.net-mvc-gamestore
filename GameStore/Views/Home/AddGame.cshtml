@model GameStore.Models.Game

@{
    ViewBag.Title = "AddGame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    @using (Html.BeginForm()) 
    {
        <div class="form">
            <h4>Новый продукт</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="fields_block">
                <label>Название:</label>
                <div class="field">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="fields_block">
                <label>Цена:</label>
                <div class="field">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="fields_block">
                <label>Год выхода:</label>
                <div class="field">
                    @Html.EditorFor(model => model.ReleaseYear, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ReleaseYear, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="fields_block">
                <label>Изображение:</label>
                <div class="field">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="fields_block">
                <div class="field">
                    <button style="margin-top:100px;" type="button" onclick="document.location='@Url.Action("Editor","Home",new {search = " "}))'">Отмена</button>
                    <button type="submit">Добавить</button>
                </div>
            </div>
        </div>
    }

